{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "baseUrl": "./",
    "paths": {
      "@database": ["src/database"],
      "@api": ["src/api"],
      "@app": ["src/app"],
      "@constants": ["src/constants"]
    }
  }
}
